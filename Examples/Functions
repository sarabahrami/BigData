//check to see if a number is prime
def isPrime (num:Int):Boolean={
  if(num==2)
  return true
  var counter=2
  val temp=num/2
  while (counter<temp){
    if (num%counter==0){
        return false
    }
      counter +=1
  }
  return true
}
val num=2
if (isPrime(num)){
  println(s"$num is prime")
}else{
  println(s"$num is not prim")
}

